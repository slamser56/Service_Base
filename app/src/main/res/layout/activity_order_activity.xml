<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order_activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/order"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/order"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="0px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Дата принятия в ремонт"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="0px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="Статус"
                    android:textColor="#000" />


                <Spinner
                    android:id="@+id/status"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Описание заказа"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/type_of_repair"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/type_of_repair"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/orl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/serial_number"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/serial_number"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/imei"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/imei"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:singleLine="true"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/unique_number"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/unique_number"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"
                    android:inputType="textMultiLine"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/product"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/product"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"

                    android:inputType="textMultiLine"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/data_of_warranty"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/date_of_warranty"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="textMultiLine"

                    android:text="" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/orl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/appearance"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/appearance"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"

                    android:inputType="textMultiLine"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/additional_description"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/additional_description"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"

                    android:inputType="textMultiLine"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/malfunction"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/malfunction"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/contact_info"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/contractor"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/contractor"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"

                    android:singleLine="true"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/contact_person"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/contact_person"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"

                    android:inputType="textMultiLine"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/phone"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"

                    android:inputType="phone"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/mail"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/mail"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"

                    android:inputType="textEmailAddress"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="@string/adress"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/adress"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:ems="10"

                    android:inputType="textMultiLine"

                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/comments"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orl13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comment_rv"
                    android:layout_width="match_parent"
                    android:layout_height="500px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="20"
                        android:hint="Текст комментария"
                        android:inputType="textMultiLine"
                        android:text="" />

                    <Button
                        android:id="@+id/comments_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Blue"
                        android:text="Добавить"
                        android:textColor="#FFF" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/completed_work"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/orl14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Blue"
                        android:text="@string/select_work"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Blue"
                        android:text="@string/edit"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Blue"
                        android:text="@string/delete"
                        android:textColor="#FFF" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/repair_view"
                    android:layout_width="match_parent"
                    android:layout_height="500px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:text="Стоимость работ"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/cost_work"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/part"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/parts_view"
                    android:layout_width="match_parent"
                    android:layout_height="500px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="2"
                    android:text="Стоимость запчастей"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/parts_cost"
                   android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:enabled="false" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>